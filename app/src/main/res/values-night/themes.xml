<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for dark mode. -->
    <style name="Theme.PortfolioApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <!-- Splash Screen Theme for Dark Mode -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to a dark color. -->
        <item name="windowSplashScreenBackground">@color/black</item>
        <!-- The icon and post-splash theme remain the same. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.PortfolioApp</item>
    </style>
</resources>